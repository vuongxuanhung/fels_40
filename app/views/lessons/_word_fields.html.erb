<div class="word">
  <%= f.label :content, "Word" %>
  <%= f.hidden_field :_destroy %>
  <%= link_to "", "#", onclick: "remove_fields(this)", class: "glyphicon glyphicon-trash" %>
  <%= f.text_field :content, class: "form-control" %>

  <div class="answers">
    <%= f.fields_for :answers do |builder| %>
      <%= render 'answer_fields', f: builder %>
    <% end %>
  </div>

  <p class="add_answer"><%= create_add_answer_button "Add Answer", f, :answers%></p>
</div>

<script>
  $(function(){
    $(".answers").each(function(){
      var boxes = $(this).find("input[type='checkbox']:checked");
      if(boxes.length == 0){
        $(this).find("input[type='checkbox']:first").prop("checked", true)
      }
    });
  });
</script>

