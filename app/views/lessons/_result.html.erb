<section id="word-<%= f.options[:child_index] %>" class="<%= 'hidden' if f.options[:child_index] > 0 %>">
  <span class="counter"><%= f.options[:child_index]+1 %>/20</span>
  <div class="question">
    <div class="col-md-4 col-md-offset-2 text-center">
      <h1><%= f.object.word.content %></h1>
      <%= f.hidden_field :word_id, value: f.object.word.id %>
    </div>
    <div class="col-md-3">
      <% f.object.word.answers.each do |answer| %>
        <% if answer.correct? %>
          <%= f.button answer.content, type: "button", id: answer.id, correct: true, class: "btn btn-primary answer"%>
        <% else %>
          <%= f.button answer.content, type: "button", id: answer.id, class: "btn btn-primary answer"%>
        <% end %>
        <%= f.radio_button :answer_id, answer.id, class: "radio_answer" %>
      <% end %>
    </div>
    <div class="next">
      <% if f.options[:child_index] < 19 %>
        <%= button_tag "", type: "button", class:"btn btn-primary glyphicon glyphicon-arrow-right", onclick: "next_word(#{f.options[:child_index]})", title: "Next" %>
      <% elsif f.options[:child_index] == 19 %>
        <%= button_tag "", class:"btn btn-primary glyphicon glyphicon-arrow-right", onclick: "next_word(#{f.options[:child_index]})", title: "Next" %>
      <% end %>
    </div>
  </div>
</section>


