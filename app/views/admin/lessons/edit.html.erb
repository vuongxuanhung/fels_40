<% provide(:title,"Edit this lesson") %>

<div class="row" >
  <div class="col-md-6 col-md-offset-3">
    <h1>Edit this lesson</h1>
    <%= form_for [:admin, @category, @lesson] do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <div class="words">
        <%= f.fields_for :words do |builder| %>
          <%= render 'word_fields', f: builder %>
        <% end %>
      </div>

      <p><%= create_add_word_button "Add Word", f, :words %></p>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
